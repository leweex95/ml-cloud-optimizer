# Cloud Workload Optimizer - Configuration Template
# Copy this file to .env and fill in your specific values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=changeme
DB_NAME=ml_cloud

# ============================================================================
# MLFLOW CONFIGURATION
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_LOCATION=./mlflow_artifacts
MLFLOW_EXPERIMENT_NAME=cloud-workload-optimization

# ============================================================================
# KUBERNETES CONFIGURATION
# ============================================================================
K8S_CONTEXT=docker-desktop
K8S_NAMESPACE=ml-cloud-optimizer
K8S_REPLICA_COUNT=3

# ============================================================================
# FEATURE STORE (FEAST) CONFIGURATION
# ============================================================================
FEAST_PROJECT=ml-cloud-optimizer
FEAST_REGISTRY=file:///app/feast_registry.db

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# ============================================================================
# MODEL TRAINING
# ============================================================================
RANDOM_SEED=42
TEST_SIZE=0.2
VAL_SIZE=0.1
N_SPLITS=5
N_JOBS=-1

# ============================================================================
# RETRAINING TRIGGERS
# ============================================================================
RETRAIN_FREQUENCY_DAYS=7
DATA_DRIFT_THRESHOLD=0.05
PERFORMANCE_DEGRADATION_THRESHOLD=0.1  # 10% performance drop
RETRAIN_ON_N_RECORDS=10000

# ============================================================================
# MONITORING & ALERTS
# ============================================================================
ALERT_EMAIL=admin@example.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_MAE_THRESHOLD=0.15
ALERT_RMSE_THRESHOLD=0.20
ALERT_CPU_THRESHOLD=0.85

# ============================================================================
# CLOUD PROVIDER CREDENTIALS (if using BigQuery, Snowflake, etc.)
# ============================================================================
# GCP_PROJECT_ID=your-gcp-project
# GCP_CREDENTIALS_JSON=/path/to/credentials.json
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
